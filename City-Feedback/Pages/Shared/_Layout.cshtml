@using System.Security.Claims
@using System.Text.Json
@using City_Feedback.Models
@using System.IO
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment HostEnvironment

@{
    string currentUserProfilePicture = "/images/default_profile.png";
    string? currentUserFullName = null;

    var username = User.FindFirst(ClaimTypes.Name)?.Value;

    if (!string.IsNullOrEmpty(username))
    {
        var jsonFilePath = System.IO.Path.Combine(Directory.GetCurrentDirectory(), "users.json");

        if (File.Exists(jsonFilePath))
        {
            try
            {
                string jsonString = File.ReadAllText(jsonFilePath);

                if (!string.IsNullOrWhiteSpace(jsonString))
                {
                    var jsonOptions = new JsonSerializerOptions
                    {
                        PropertyNameCaseInsensitive = true
                    };

                    var allUsers = JsonSerializer.Deserialize<List<UserCredentials>>(jsonString, jsonOptions);
                    var user = allUsers?.FirstOrDefault(u => u.Username.Equals(username, StringComparison.OrdinalIgnoreCase));

                    if (user != null)
                    {
                        currentUserProfilePicture = !string.IsNullOrEmpty(user.ProfilePicturePath)
                            ? user.ProfilePicturePath
                            : "/images/default_profile.png";
                        currentUserFullName = user.FullName;
                    }
                }
            }
            catch
            {
                // V primeru napake uporabi default sliko
            }
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - City_Feedback</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/City_Feedback.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Info">City_Feedback</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Domov</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Prijave">Nova prijava</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Domov</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-page="/Profile">
                                    <img src="@currentUserProfilePicture"
                                         alt="Profilna slika"
                                         class="rounded-circle me-2"
                                         style="width: 32px; height: 32px; object-fit: cover; border: 2px solid #dee2e6;">
                                    <span>Pozdravljen, @(!string.IsNullOrEmpty(currentUserFullName) ? currentUserFullName : User.Identity.Name)</span>
                                </a>
                            </li>
                            <li class="nav-item d-flex align-items-center">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Logout">Odjava</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Login">Prijava</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Register">Registracija</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - City_Feedback - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>