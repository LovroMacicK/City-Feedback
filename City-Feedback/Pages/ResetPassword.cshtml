@page
@model City_Feedback.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Ponastavitev gesla";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <section>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["Message"]
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @TempData["Error"]
                    </div>
                }

                @if (Model.IsValidToken)
                {
                    <form method="post">
                        <p>Vnesite novo geslo za vaš račun.</p>
                        <hr />

                        <input type="hidden" asp-for="Token" />

                        <div class="form-group mb-3">
                            <label asp-for="NewPassword">Novo geslo</label>
                            <input asp-for="NewPassword" class="form-control" type="password" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword">Potrdi geslo</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <button type="submit" class="btn btn-primary">Spremeni geslo</button>
                        </div>

                        <div class="form-group">
                            <p><a class="nav-link text-dark" asp-page="/Login">Nazaj na prijavo</a></p>
                        </div>
                    </form>
                }
                else
                {
                    <div class="alert alert-danger" role="alert">
                        <strong>Neveljavna povezava</strong>
                        <p class="mb-0">Povezava za ponastavitev gesla je neveljavna ali je potekla. Prosimo, zahtevajte novo povezavo.</p>
                    </div>
                    <div class="form-group">
                        <p><a class="nav-link text-dark" asp-page="/ForgotPassword">Zahtevaj novo povezavo</a></p>
                        <p><a class="nav-link text-dark" asp-page="/Login">Nazaj na prijavo</a></p>
                    </div>
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
