@page
@model LoginModel
@{
    ViewData["Title"] = "Prijava";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <section>
                <form method="post">
                    <p>Prijavite se z vašim računom.</p>
                    <hr />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="credential.Username"></label>
                        <input asp-for="credential.Username" class="form-control" />
                        <span asp-validation-for="credential.Username" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="credential.Password"></label>
                        <input asp-for="credential.Password" class="form-control" />
                        <span asp-validation-for="credential.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <button type="submit" class="btn btn-primary">Prijava</button>
                    </div>

                    <div class="form-group mb-3">
                        <a asp-page="/ForgotPassword" class="text-primary">Pozabljeno geslo?</a>
                    </div>

                    <div class="form-group">
                        <p>Še nimate računa? <a class="nav-link text-dark" asp-area="" asp-page="/Register">Registracija</a></p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}