@page
@model City_Feedback.Pages.ObcinaModel
@{
    ViewData["Title"] = "Upravljanje - Občina";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Administracija Občine</h1>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        @if (Model.PrijaveZaObcino.Count == 0)
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    Ni prijav za vašo občino.
                </div>
            </div>
        }
        else
        {
            @foreach (var item in Model.PrijaveZaObcino)
            {
                var cardClass = item.JeArhivirano ? "border-secondary" : item.JeReseno ? "border-success" : "border-warning";
                
                <div class="col-12 mb-3">
                    <div class="card shadow-sm @cardClass" style="border-width: 2px;">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h5 class="card-title text-primary mb-2">
                                        <a asp-page="/PodrobnostiPrijave" asp-route-id="@item.Id" class="text-decoration-none">
                                            @item.Naslov
                                        </a>
                                        @if (item.JeArhivirano)
                                        {
                                            <span class="badge bg-secondary ms-2">📦 Arhivirano</span>
                                        }
                                        else if (item.JeReseno)
                                        {
                                            <span class="badge bg-success ms-2">✅ Opravljeno</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark ms-2">⏳ V obdelavi</span>
                                        }
                                        
                                        @switch (item.Nujnost)
                                        {
                                            case City_Feedback.Models.NivoPrioritet.Nujno:
                                                <span class="badge bg-danger ms-2">🔴 NUJNO</span>
                                                break;
                                            case City_Feedback.Models.NivoPrioritet.Pomembno:
                                                <span class="badge bg-warning text-dark ms-2">🟡 POMEMBNO</span>
                                                break;
                                            case City_Feedback.Models.NivoPrioritet.KoBoPoslovno:
                                                <span class="badge bg-secondary ms-2">🟢 KO BO MOŽNO</span>
                                                break;
                                        }
                                    </h5>
                                    <p class="card-text text-muted mb-2">@item.Opis</p>
                                    <small class="text-muted">
                                        📅 @item.Datum.ToString("dd.MM.yyyy HH:mm")
                                        @if (!string.IsNullOrEmpty(item.Kategorija))
                                        {
                                            <span class="badge bg-info text-dark ms-2">@item.Kategorija</span>
                                        }
                                        @if (!string.IsNullOrEmpty(item.Lokacija))
                                        {
                                            <span class="badge bg-secondary ms-2">📍 @item.Lokacija</span>
                                        }
                                    </small>
                                </div>
                                <div class="col-md-6">
                                    <div class="row mb-3">
                                        <div class="col-12">
                                            <div class="d-flex justify-content-center gap-2 mb-2">
                                                <span class="badge bg-success fs-6">👍 @item.Upvotes</span>
                                                <span class="badge bg-danger fs-6">👎 @item.Downvotes</span>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-12">
                                            <label class="form-label fw-bold small mb-2">Prioriteta:</label>
                                            <div class="d-grid gap-2 mb-3">
                                                <form method="post" asp-page-handler="NastaviPrioriteto" asp-route-id="@item.Id" asp-route-prioriteta="2">
                                                    <button type="submit" class="btn btn-sm w-100 @(item.Nujnost == City_Feedback.Models.NivoPrioritet.Nujno ? "btn-danger" : "btn-outline-danger")" @(item.JeArhivirano ? "disabled" : "")>
                                                        🔴 Nujno
                                                    </button>
                                                </form>
                                                <form method="post" asp-page-handler="NastaviPrioriteto" asp-route-id="@item.Id" asp-route-prioriteta="1">
                                                    <button type="submit" class="btn btn-sm w-100 @(item.Nujnost == City_Feedback.Models.NivoPrioritet.Pomembno ? "btn-warning text-dark" : "btn-outline-warning")" @(item.JeArhivirano ? "disabled" : "")>
                                                        🟡 Pomembno
                                                    </button>
                                                </form>
                                                <form method="post" asp-page-handler="NastaviPrioriteto" asp-route-id="@item.Id" asp-route-prioriteta="0">
                                                    <button type="submit" class="btn btn-sm w-100 @(item.Nujnost == City_Feedback.Models.NivoPrioritet.KoBoPoslovno ? "btn-secondary" : "btn-outline-secondary")" @(item.JeArhivirano ? "disabled" : "")>
                                                        🟢 Ko bo možno
                                                    </button>
                                                </form>
                                            </div>

                                            <label class="form-label fw-bold small mb-2">Status:</label>
                                            <div class="d-flex gap-2 mb-2">
                                                <form method="post" asp-page-handler="OznaciKotReseno" asp-route-id="@item.Id" class="flex-fill">
                                                    <button type="submit"
                                                            class="btn btn-sm w-100 @(item.JeReseno ? "btn-success" : "btn-outline-success")"
                                                            @(item.JeArhivirano ? "disabled" : "")>
                                                        ✅ Opravljeno
                                                    </button>
                                                </form>

                                                <form method="post" asp-page-handler="OznaciKotVObdelavi" asp-route-id="@item.Id" class="flex-fill">
                                                    <button type="submit"
                                                            class="btn btn-sm w-100 @(!item.JeReseno ? "btn-warning text-dark" : "btn-outline-warning")"
                                                            @(item.JeArhivirano ? "disabled" : "")>
                                                        ⏳ V obdelavi
                                                    </button>
                                                </form>
                                            </div>
                                            
                                            <label class="form-label fw-bold small mb-2 mt-2">Akcije:</label>
                                            <div class="d-flex gap-2">
                                                <a asp-page="/PodrobnostiPrijave" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary flex-fill">
                                                    👁️ Poglej
                                                </a>
                                                @if (item.JeArhivirano)
                                                {
                                                    <form method="post" asp-page-handler="RazveljavljArhiv" asp-route-id="@item.Id" class="flex-fill">
                                                        <button type="submit" class="btn btn-sm btn-outline-primary w-100">
                                                            ↩️ Razarhiviraj
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <form method="post" asp-page-handler="Arhiviraj" asp-route-id="@item.Id" class="flex-fill">
                                                        <button type="submit" class="btn btn-sm btn-outline-secondary w-100">
                                                            📦 Arhiviraj
                                                        </button>
                                                    </form>
                                                }
                                            </div>
                                            <div class="d-flex gap-2 mt-2">
                                                <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="flex-fill" onsubmit="return confirm('Ali ste prepričani, da želite izbrisati to prijavo? Tega dejanja ni mogoče razveljaviti.');">
                                                    <button type="submit" class="btn btn-sm btn-danger w-100">
                                                        🗑️ Izbriši
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>