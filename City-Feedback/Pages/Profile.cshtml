@page
@model ProfileModel
@{
    ViewData["Title"] = "Profil";
}

<div class="container mt-5">

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

    <form method="post" enctype="multipart/form-data">
        <div class="row g-4">

            <div class="col-md-4 text-center">
                <div class="card p-3 h-100">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">

                        <img src="@Model.ExistingProfilePicturePath"
                             alt="Profilna slika"
                             class="rounded-circle img-fluid border mb-3"
                             style="width: 150px; height: 150px; object-fit: cover;"
                             id="profilePreview">

                        <div class="mb-4 w-100">
                            <label for="fileUpload" class="btn btn-outline-secondary w-100 btn-sm">
                                Zamenjaj sliko
                            </label>

                            <input asp-for="ProfilePicture" type="file" id="fileUpload" class="d-none" accept="image/*" onchange="previewImage(event)">
                            <span asp-validation-for="ProfilePicture" class="text-danger d-block mt-2"></span>
                        </div>

                        <input type="hidden" asp-for="ExistingProfilePicturePath" />

                        <hr class="w-100">

                        <div class="mb-3">
                            <div class="form-check form-switch mb-2">
                                <input class="form-check-input" type="checkbox" role="switch" id="darkModeSwitch" @(Model.DarkMode ? "checked" : "")>
                                <label class="form-check-label" for="darkModeSwitch">Temni način</label>
                            </div>

                            <div class="form-check form-switch">
                                <input asp-for="IsPublicProfile" class="form-check-input" type="checkbox" role="switch" id="publicProfileSwitch">
                                <label class="form-check-label" for="publicProfileSwitch">Javni profil</label>
                            </div>
                            <small class="form-text text-muted d-block mt-1">Če je profil javen, lahko drugi uporabniki vidijo vašo statistiko.</small>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card p-4 h-100">
                    <h3 class="mb-4">Podatki profila</h3>

                    <div class="mb-3">
                        <label asp-for="Input.FullName" class="form-label">Ime in priimek</label>
                        <input asp-for="Input.FullName" class="form-control" />
                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">E-poštni naslov</label>
                        <input asp-for="Input.Email" type="email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Telefonska številka</label>
                        <div class="input-group">
                            <select asp-for="Input.CountryCode" class="form-select" style="max-width: 140px;">
                                <option value="+386">🇸🇮 +386</option>
                                <option value="+385">🇭🇷 +385</option>
                                <option value="+387">🇧🇦 +387</option>
                                <option value="+381">🇷🇸 +381</option>
                                <option value="+382">🇲🇪 +382</option>
                                <option value="+383">🇽🇰 +383</option>
                                <option value="+389">🇲🇰 +389</option>
                                <option value="+43">🇦🇹 +43</option>
                                <option value="+39">🇮🇹 +39</option>
                                <option value="+49">🇩🇪 +49</option>
                                <option value="+41">🇨🇭 +41</option>
                                <option value="+44">🇬🇧 +44</option>
                                <option value="+33">🇫🇷 +33</option>
                                <option value="+34">🇪🇸 +34</option>
                                <option value="+351">🇵🇹 +351</option>
                                <option value="+31">🇳🇱 +31</option>
                                <option value="+32">🇧🇪 +32</option>
                                <option value="+48">🇵🇱 +48</option>
                                <option value="+420">🇨🇿 +420</option>
                                <option value="+421">🇸🇰 +421</option>
                                <option value="+36">🇭🇺 +36</option>
                                <option value="+40">🇷🇴 +40</option>
                                <option value="+359">🇧🇬 +359</option>
                                <option value="+30">🇬🇷 +30</option>
                                <option value="+1">🇺🇸 +1</option>
                                <option value="+7">🇷🇺 +7</option>
                                <option value="+86">🇨🇳 +86</option>
                                <option value="+91">🇮🇳 +91</option>
                                <option value="+81">🇯🇵 +81</option>
                                <option value="+82">🇰🇷 +82</option>
                                <option value="+61">🇦🇺 +61</option>
                                <option value="+64">🇳🇿 +64</option>
                                <option value="+27">🇿🇦 +27</option>
                                <option value="+55">🇧🇷 +55</option>
                                <option value="+52">🇲🇽 +52</option>
                                <option value="+54">🇦🇷 +54</option>
                            </select>
                            <input asp-for="Input.PhoneNumber" type="tel" class="form-control" placeholder="12 345 678" />
                        </div>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>

                    @if (Model.IsAdmin)
                    {
                        <div class="mb-3">
                            <label asp-for="Input.Obcina" class="form-label">Občina</label>
                            <select asp-for="Input.Obcina" class="form-select">
                                <option value="">-- Izberite občino --</option>
                                @foreach (var obcina in Model.SlovenskeObcine)
                                {
                                    <option value="@obcina">@obcina</option>
                                }
                            </select>
                            <span asp-validation-for="Input.Obcina" class="text-danger"></span>
                            <small class="form-text text-muted">Izberite občino, ki jo predstavljate kot administrator.</small>
                        </div>
                    }

                    <div class="d-flex justify-content-end gap-2 pt-3 border-top">
                        <button type="button" class="btn btn-outline-secondary" onclick="window.history.back()">Prekliči</button>
                        <button type="submit" class="btn btn-primary">Shrani</button>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>

<script>
    function previewImage(event) {
        const output = document.getElementById('profilePreview');
        if (!event.target.files || event.target.files.length === 0) {
            return;
        }

        const reader = new FileReader();
        reader.onload = function(){
            output.src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
    }

    document.addEventListener('DOMContentLoaded', () => {
        const switchInput = document.getElementById('darkModeSwitch');
        const htmlElement = document.documentElement;
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme === 'dark') {
            htmlElement.setAttribute('data-bs-theme', 'dark');
        } else {
            htmlElement.setAttribute('data-bs-theme', 'light');
        }
        if (switchInput.checked) {
            htmlElement.setAttribute('data-bs-theme', 'dark');
            localStorage.setItem('theme', 'dark');
        } else {
            htmlElement.setAttribute('data-bs-theme', 'light');
            localStorage.setItem('theme', 'light');
        }

        switchInput.addEventListener('change', async () => {
            const isDark = switchInput.checked;

            if (isDark) {
                htmlElement.setAttribute('data-bs-theme', 'dark');
                localStorage.setItem('theme', 'dark');
            } else {
                htmlElement.setAttribute('data-bs-theme', 'light');
                localStorage.setItem('theme', 'light');
            }
            try {
                const response = await fetch('/Profile?handler=ToggleDarkMode', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ darkMode: isDark })
                });

                const result = await response.json();
                if (!result.success) {
                    console.error('Napaka pri shranjevanju dark mode nastavitve');
                }
            } catch (error) {
                console.error('Napaka pri klicu API:', error);
            }
        });
    });
</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}