@page "{id:guid}"
@model City_Feedback.Pages.UrejanjeObjavModel
@{
    ViewData["Title"] = "Urejanje prijave";
}

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-4">Uredi prijavo</h1>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm p-4">
                <form method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label fw-bold">Naslov prijave</label>
                        <input asp-for="Title" class="form-control" placeholder="Vnesite kratek naslov..." />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category" class="form-label fw-bold">Kategorija</label>
                        <select asp-for="Category" class="form-select">
                            <option value="Ceste">🛣️ Ceste</option>
                            <option value="Javna razsvetljava">💡 Javna razsvetljava</option>
                            <option value="Parki in zelenice">🌳 Parki in zelenice</option>
                            <option value="Odpadki">🗑️ Odpadki</option>
                            <option value="Javni prevoz">🚌 Javni prevoz</option>
                            <option value="Vandalizem">⚠️ Vandalizem</option>
                            <option value="Ostalo">📋 Ostalo</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold">Opis</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Opišite težavo..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.CurrentImagePath))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Trenutna slika</label>
                            <div>
                                <img src="@Model.CurrentImagePath" alt="Trenutna slika" class="img-thumbnail" style="max-height: 200px;">
                            </div>
                        </div>
                    }

                    <div class="mb-3">
                        <label asp-for="NewImage" class="form-label">Nova slika (neobvezno)</label>
                        <input asp-for="NewImage" type="file" class="form-control" accept="image/*" />
                        <span asp-validation-for="NewImage" class="text-danger"></span>
                        <small class="text-muted">Če želite obdržati staro sliko, pustite to polje prazno.</small>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">💾 Shrani spremembe</button>
                        <a asp-page="/Pregled" class="btn btn-secondary btn-lg">❌ Prekliči</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
