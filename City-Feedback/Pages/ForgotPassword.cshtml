@page
@model City_Feedback.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Pozabljeno geslo";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4">🔒 Pozabljeno geslo</h2>
                    
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Message"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <p class="text-muted text-center mb-4">
                        Vnesite svoj e-poštni naslov in poslali vam bomo povezavo za ponastavitev gesla.
                    </p>

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">E-poštni naslov</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="vas.email@example.com" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">📧 Pošlji povezavo</button>
                            <a asp-page="/Login" class="btn btn-outline-secondary">← Nazaj na prijavo</a>
                        </div>
                    </form>

                    <div class="mt-4 text-center">
                        <small class="text-muted">
                            💡 <strong>Nasvet:</strong> Preverite tudi mapo z neželeno pošto (spam).
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
