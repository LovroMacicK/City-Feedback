@page
@model City_Feedback.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Pozabljeno geslo";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <section>
                @if (!string.IsNullOrEmpty(Model.ResetLink))
                {
                    <div class="alert alert-success" role="alert">
                        <p class="mb-2">Povezava za ponastavitev gesla:</p>
                        <a href="@Model.ResetLink" class="btn btn-primary">Ponastavi geslo</a>
                    </div>
                }
                else
                {
                    <form method="post">
                        <p>Vnesite svoj e-poštni naslov.</p>
                        <hr />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <button type="submit" class="btn btn-primary">Pošlji</button>
                        </div>

                        <div class="form-group">
                            <p><a class="nav-link text-dark" asp-page="/Login">Nazaj na prijavo</a></p>
                        </div>
                    </form>
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
