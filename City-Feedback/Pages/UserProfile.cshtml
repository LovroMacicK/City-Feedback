@page "{username}"
@model City_Feedback.Pages.UserProfileModel
@{
    ViewData["Title"] = Model.ProfileUser?.FullName ?? "Uporabniški profil";
}

<div class="container mt-5">
    <div class="mb-4">
        <a href="javascript:history.back()" class="btn btn-outline-primary">
            ← Nazaj
        </a>
    </div>

    @if (Model.ProfileUser != null)
    {
        @if (!Model.ProfileUser.IsPublicProfile)
        {
            <div class="alert alert-warning text-center">
                <h4>🔒 Zasebni profil</h4>
                <p>Ta uporabnik je nastavil svoj profil kot zaseben.</p>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body text-center">
                            <img src="@(string.IsNullOrEmpty(Model.ProfileUser.ProfilePicturePath) ? "/images/default_profile.png" : Model.ProfileUser.ProfilePicturePath)"
                                 alt="Profilna slika"
                                 class="rounded-circle img-fluid border mb-3"
                                 style="width: 150px; height: 150px; object-fit: cover;">
                            
                            <h3 class="mb-2">@Model.ProfileUser.FullName</h3>
                            <p class="text-muted">@@@Model.ProfileUser.Username</p>
                            
                            @if (Model.ProfileUser.IsAdmin && !string.IsNullOrEmpty(Model.ProfileUser.Obcina))
                            {
                                <span class="badge bg-primary mb-3">🏛️ @Model.ProfileUser.Obcina</span>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h4 class="mb-0"></h4>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-md-4 mb-3">
                                    <div class="border rounded p-3">
                                        <h2 class="text-primary mb-0">@Model.TotalPrijave</h2>
                                        <small class="text-muted">Skupaj prijav</small>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="border rounded p-3">
                                        <h2 class="text-success mb-0">@Model.ResolvedPrijave</h2>
                                        <small class="text-muted">Rešenih prijav</small>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="border rounded p-3">
                                        <h2 class="text-warning mb-0">@Model.PendingPrijave</h2>
                                        <small class="text-muted">Čakajočih prijav</small>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <div class="row text-center">
                                <div class="col-md-6 mb-3">
                                    <div class="border rounded p-3">
                                        <h2 class="text-info mb-0">@Model.TotalUpvotes</h2>
                                        <small class="text-muted">Skupaj glasov</small>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="border rounded p-3">
                                        <h2 class="text-secondary mb-0">@Model.TotalComments</h2>
                                        <small class="text-muted">Skupaj komentarjev</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                            <h4 class="mb-0">📋 Prijave uporabnika</h4>
                        </div>
                        <div class="card-body">
                            @if (Model.UserPrijave != null && Model.UserPrijave.Any())
                            {
                                @foreach (var prijava in Model.UserPrijave)
                                {
                                    <div class="card mb-3 shadow-sm" style="cursor: pointer;" onclick="window.location.href='@Url.Page("/PodrobnostiPrijave", new { id = prijava.Id })'">
                                        @if (!string.IsNullOrEmpty(prijava.SlikaPot))
                                        {
                                            <img src="@prijava.SlikaPot" class="card-img-top" alt="Slika prijave" style="max-height: 200px; object-fit: cover;">
                                        }
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h5 class="card-title text-primary mb-0">
                                                    @prijava.Naslov
                                                    @if (prijava.JeReseno)
                                                    {
                                                        <span class="badge bg-success ms-2" style="font-size: 0.6em;">✅ OPRAVLJENO</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning text-dark ms-2" style="font-size: 0.6em;">⏳ ČAKA</span>
                                                    }
                                                </h5>
                                                <small class="text-muted">@prijava.Datum.ToString("dd.MM.yyyy")</small>
                                            </div>
                                            @if (!string.IsNullOrEmpty(prijava.Kategorija))
                                            {
                                                <span class="badge bg-info text-dark mb-2">@prijava.Kategorija</span>
                                            }
                                            <p class="card-text">@prijava.Opis</p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="text-muted">💬 @(prijava.Komentarji?.Count ?? 0) komentarjev</span>
                                                <div>
                                                    <span class="badge bg-success">👍 @prijava.Upvotes</span>
                                                    <span class="badge bg-danger">👎 @prijava.Downvotes</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted text-center">Ta uporabnik še ni objavil nobene prijave.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-danger text-center">
            <h4>❌ Uporabnik ne obstaja</h4>
            <p>Uporabnik s tem uporabniškim imenom ne obstaja.</p>
        </div>
    }
</div>
