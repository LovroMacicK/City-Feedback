@page
@model City_Feedback.Pages.PregledModel
@{
    ViewData["Title"] = "Pregled";
}

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-4">Moj pregled</h1>
    </div>
    <div class="row justify-content-center mb-5">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center mb-3 mb-md-0">
                            <img src="@Model.ProfilePicturePath"
                                 alt="Profilna slika"
                                 class="rounded-circle mb-3"
                                 style="width: 150px; height: 150px; object-fit: cover; border: 4px solid #dee2e6;">
                            <h4>@Model.FullName</h4>
                            <p class="text-muted">@@@Model.Username</p>
                            <p class="text-muted"><small>@Model.Email</small></p>
                        </div>
                        <div class="col-md-8">
                            <h5 class="mb-4">📊 Statistika</h5>
                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="card bg-primary text-white">
                                        <div class="card-body">
                                            <h2 class="mb-0">@Model.TotalPrijave</h2>
                                            <small>Prijave</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="card bg-danger text-white">
                                        <div class="card-body">
                                            <h2 class="mb-0">@Model.TotalLikes</h2>
                                            <small>❤️ Všečki</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="card bg-success text-white">
                                        <div class="card-body">
                                            <h2 class="mb-0">@Model.ResolvedPrijave</h2>
                                            <small>✅ Rešene</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <h3 class="mb-4">📋 Moje prijave</h3>

            @if (Model.UserPrijave.Count > 0)
            {
                @foreach (var prijava in Model.UserPrijave)
                {
                    <div class="card mb-3 shadow-sm">
                        @if (!string.IsNullOrEmpty(prijava.SlikaPot))
                        {
                            <img src="@prijava.SlikaPot" class="card-img-top" alt="Slika prijave" style="max-height: 300px; object-fit: cover;">
                        }

                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h5 class="card-title text-primary mb-0">
                                    @prijava.Naslov

                                    @if (prijava.JeReseno)
                                    {
                                        <span class="badge bg-success ms-2" style="font-size: 0.6em;">✅ OPRAVLJENO</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark ms-2" style="font-size: 0.6em;">⏳ ČAKA</span>
                                    }
                                </h5>
                                <small class="text-muted">@prijava.Datum.ToString("dd.MM.yyyy HH:mm")</small>
                            </div>

                            <p class="card-text">@prijava.Opis</p>

                            <hr />

                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="badge bg-danger">❤️ @prijava.SteviloVseckov všečkov</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info text-center">
                    Nimate še nobenih prijav. <a asp-page="/Prijave" class="alert-link">Ustvarite prvo!</a>
                </div>
            }
        </div>
    </div>
</div>
