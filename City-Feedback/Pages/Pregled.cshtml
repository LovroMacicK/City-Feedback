@page
@model City_Feedback.Pages.PregledModel
@{
    ViewData["Title"] = "Pregled";
}

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-4">Moj pregled</h1>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row justify-content-center mb-5">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center mb-3 mb-md-0">
                            <img src="@Model.ProfilePicturePath"
                                 alt="Profilna slika"
                                 class="rounded-circle mb-3"
                                 style="width: 150px; height: 150px; object-fit: cover; border: 4px solid #dee2e6;">
                            <h4>@Model.FullName</h4>
                            <p class="text-muted">@@@Model.Username</p>
                            <p class="text-muted"><small>@Model.Email</small></p>
                        </div>
                        <div class="col-md-8">
                            <h5 class="mb-4">📊 Statistika</h5>
                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="card bg-primary text-white">
                                        <div class="card-body">
                                            <h2 class="mb-0">@Model.TotalPrijave</h2>
                                            <small>Prijave</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="card bg-danger text-white">
                                        <div class="card-body">
                                            <h2 class="mb-0">@Model.TotalLikes</h2>
                                            <small>❤️ Všečki</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="card bg-success text-white">
                                        <div class="card-body">
                                            <h2 class="mb-0">@Model.ResolvedPrijave</h2>
                                            <small>✅ Rešene</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <h3 class="mb-4">📋 Moje prijave</h3>

            @if (Model.UserPrijave.Count > 0)
            {
                <div class="list-group">
                    @foreach (var prijava in Model.UserPrijave)
                    {
                        <div class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between align-items-center">
                                <div class="flex-grow-1">
                                    <h5 class="mb-1">
                                        @prijava.Naslov
                                        @if (prijava.JeReseno)
                                        {
                                            <span class="badge bg-success ms-2">✅ OPRAVLJENO</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark ms-2">⏳ ČAKA</span>
                                        }
                                        @if (!string.IsNullOrEmpty(prijava.Kategorija))
                                        {
                                            <span class="badge bg-info text-dark ms-2">@prijava.Kategorija</span>
                                        }
                                    </h5>
                                    <small class="text-muted">
                                        @prijava.Datum.ToString("dd.MM.yyyy HH:mm") · ❤️ @prijava.SteviloVseckov všečkov
                                    </small>
                                </div>
                                <div class="btn-group ms-3" role="group">
                                    <a asp-page="/UrejanjeObjav" asp-route-id="@prijava.Id" class="btn btn-sm btn-outline-primary">
                                        ✏️ Uredi
                                    </a>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@prijava.Id" class="d-inline" 
                                          onsubmit="return confirm('Ali ste prepričani, da želite izbrisati to prijavo?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            🗑️ Odstrani
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    Nimate še nobenih prijav. <a asp-page="/Prijave" class="alert-link">Ustvarite prvo!</a>
                </div>
            }
        </div>
    </div>
</div>
