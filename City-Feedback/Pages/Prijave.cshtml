@page
@model PrijaveModel
@{
    ViewData["Title"] = "Prijave";
}

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-4">Prijave</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm p-4">
                <form method="post" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label for="Title" class="form-label fw-bold">Naslov prijave</label>
                        <input type="text" class="form-control" id="Title" name="Title" placeholder="Vnesite kratek naslov..." required />
                    </div>

                    <div class="mb-3">
                        <label for="Description" class="form-label fw-bold">Opis</label>
                        <textarea class="form-control" id="Description" name="Description" rows="4" placeholder="Opišite težavo..." required></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="Image" class="form-label">Slika (neobvezno)</label>
                        <input type="file" class="form-control" id="Image" name="Image" accept="image/*" />
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">Objavi</button>
                    </div>
                </form>
            </div>

        </div>
    </div>

    <hr class="my-5" />

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="row mb-4 align-items-center">
                <div class="col">
                    <h3>Objavljene prijave</h3>
                </div>
                <div class="col-auto">
                    <form method="get" class="d-flex align-items-center">
                        <label class="me-2 fw-bold">Razvrsti po:</label>
                        <select name="sortOrder" class="form-select w-auto" onchange="this.form.submit()">

                            <!- Če je trenutno izbrano 'date' ali nič (null), dodaj atribut 'selected' ->
                            @if (ViewData["CurrentSort"] as string == "date" || ViewData["CurrentSort"] == null)
                            {
                                <option value="date" selected>📅 Najnovejše</option>
                            }
                            else
                            {
                                <option value="date">📅 Najnovejše</option>
                            }

                            <!- Če je trenutno izbrano 'likes', dodaj atribut 'selected' ->
                            @if (ViewData["CurrentSort"] as string == "likes")
                            {
                                <option value="likes" selected>❤️ Najbolj priljubljene</option>
                            }
                            else
                            {
                                <option value="likes">❤️ Najbolj priljubljene</option>
                            }

                        </select>
                    </form>
                </div>
            </div>

            @if (Model.Prijave.Count > 0)
            {
                @foreach (var prijava in Model.Prijave)
                {
                    <div class="card mb-3 shadow-sm">

                        @if (!string.IsNullOrEmpty(prijava.SlikaPot))
                        {
                            <img src="@prijava.SlikaPot" class="card-img-top" alt="Slika prijave" style="max-height: 300px; object-fit: cover;">
                        }

                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h5 class="card-title text-primary mb-0">
                                    @prijava.Naslov

                                    @if (prijava.JeReseno)
                                    {
                                        <span class="badge bg-success ms-2" style="font-size: 0.6em;">✅ OPRAVLJENO</span>
                                    }
                                </h5>
                                <small class="text-muted">@prijava.Datum.ToString("dd.MM.yyyy HH:mm")</small>
                            </div>
                            <p class="card-text">@prijava.Opis</p>

                            <hr />

                            <div class="d-flex justify-content-end">
                                <form method="post" asp-page-handler="Vote" asp-route-id="@prijava.Id">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        ❤️ <span class="badge bg-danger ms-1">@prijava.SteviloVseckov</span>
                                    </button>
                                </form>
                            </div>

                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info text-center">
                    Trenutno ni nobenih prijav. Bodite prvi!
                </div>
            }

        </div>
    </div>
</div>